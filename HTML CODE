<?php 
$index = (int)$_POST['index'];
$lines = file("comments.txt", FILE_IGNORE_NEW_LINES);
if (isset($lines[$index])) {
    unset($lines[$index]);
    file_put_contents("comments.txt", implode("\n", $lines));
}
header("Location: discussion.php"); // Changed from discussion.html
exit();
?>
<?php 
$filename = "comments.txt";

if (file_exists($filename)) {
    $lines = array_reverse(file($filename, FILE_IGNORE_NEW_LINES));
    foreach ($lines as $index => $line) {
        $parts = explode('|', $line);

        // Skip lines that are not properly formatted
        if (count($parts) !== 3) {
            continue;
        }

        list($time, $name, $message) = $parts;

        echo "<div class='comment'>";
        echo "<strong>" . htmlspecialchars($name) . "</strong> <small>($time)</small>";
        echo "<form method='POST' action='delete_comment.php' style='display:inline; float:right;' onsubmit='return confirm(\"Delete this comment?\");'>";
        echo "<input type='hidden' name='index' value='" . (count($lines) - 1 - $index) . "' />";
        echo "<button class='delete-btn'>üóëÔ∏è Delete</button>";
        echo "</form>";
        echo "<p>" . htmlspecialchars($message) . "</p>";
        echo "</div>";
    }
} else {
    echo "<p>No comments yet.</p>";
}
?>




